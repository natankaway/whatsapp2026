  "author": "CT LK Futevôlei",
  "license": "MIT",
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@whiskeysockets/baileys": "7.0.0-rc.9",
    "async-lock": "^1.4.1",
    "axios": "^1.7.0",
    "dotenv": "^16.4.5",
    "node-schedule": "^2.1.1",
    "node-telegram-bot-api": "^0.66.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "qrcode-terminal": "^0.12.0",
    "uuid": "^13.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/async-lock": "^1.4.2",
    "@types/node": "^22.10.0",
    "@types/node-schedule": "^2.1.7",
