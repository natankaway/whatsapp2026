{
  "name": "whatsapp-bot-futevolei",
  "version": "3.0.0",
  "description": "Bot WhatsApp profissional para CT LK Futevôlei - TypeScript + Baileys v7",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "dev:once": "tsx src/index.ts",
    "dashboard": "npm --prefix dashboard-ui run dev",
    "dashboard:build": "npm --prefix dashboard-ui run build",
    "dashboard:start": "npm --prefix dashboard-ui run start",
    "dev:full": "concurrently -n bot,dashboard -c blue,green \"npm run dev\" \"npm run dashboard\"",
    "start:full": "concurrently -n bot,dashboard -c blue,green \"npm run start\" \"npm run dashboard:start\"",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "keywords": [
    "whatsapp",
    "bot",
    "futevolei",
    "baileys",
    "typescript"
  ],
  "author": "CT LK Futevôlei",
  "license": "MIT",
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@whiskeysockets/baileys": "7.0.0-rc.9",
    "async-lock": "^1.4.1",
    "axios": "^1.7.0",
    "better-sqlite3": "^12.5.0",
    "bullmq": "^5.66.4",
    "dotenv": "^16.4.5",
    "express": "^5.2.1",
    "ioredis": "^5.8.2",
    "node-schedule": "^2.1.1",
    "node-telegram-bot-api": "^0.66.0",
    "opossum": "^9.0.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "prom-client": "^15.1.3",
    "qrcode-terminal": "^0.12.0",
    "uuid": "^13.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/async-lock": "^1.4.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.6",
    "@types/ioredis": "^4.28.10",
    "@types/node": "^22.19.3",
    "@types/node-schedule": "^2.1.7",
    "@types/node-telegram-bot-api": "^0.64.7",
    "@types/opossum": "^8.1.9",
    "@types/qrcode-terminal": "^0.12.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@vitest/coverage-v8": "^4.0.16",
    "concurrently": "^9.1.2",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
