# ============================================
# CT LK FUTEVÔLEI - CONFIGURAÇÕES DO BOT
# ============================================

# Ambiente
NODE_ENV=development

# Telegram - Tokens dos bots
TELEGRAM_RECREIO_TOKEN=seu_token_recreio
TELEGRAM_BANGU_TOKEN=seu_token_bangu

# Telegram - IDs para notificações (separados por vírgula)
TELEGRAM_NOTIFICATION_CHAT_IDS=123456789,987654321

# Telegram - IDs de usuários autorizados a executar comandos admin
# Se vazio, permite todos os usuários (modo legacy)
TELEGRAM_AUTHORIZED_USER_IDS=123456789,987654321

# WhatsApp - IDs dos grupos
WHATSAPP_RECREIO_GROUP=120363208643524067@g.us
WHATSAPP_BANGU_GROUP=120363419544998924@g.us

# Logs
LOG_LEVEL=info

# ============================================
# BANCO DE DADOS (FASE 2)
# ============================================

# Redis - Para sessões e estado de pausa
# Se não configurado, usa memória (dados perdidos em restart)
REDIS_URL=redis://localhost:6379

# SQLite é usado automaticamente e armazena em data/bot.db

# ============================================
# INFRAESTRUTURA (FASE 3)
# ============================================

# Porta do servidor de health check e métricas
HEALTH_PORT=3001

# ============================================
# PRODUÇÃO (FASE 4)
# ============================================

# Slack - Webhook para alertas
# Se não configurado, alertas são desabilitados
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/XXX/YYY/ZZZ

# ============================================
# LEMBRETES AUTOMÁTICOS
# ============================================

# Habilitar sistema de lembretes (true/false)
REMINDER_ENABLED=true

# Enviar lembrete 24h antes da aula
REMINDER_24H=true

# Enviar lembrete 2h antes da aula
REMINDER_2H=true

# Exigir confirmação de presença
REMINDER_CONFIRMATION_REQUIRED=false

# Prazo para confirmação (em horas antes da aula)
REMINDER_CONFIRMATION_DEADLINE=2

# ============================================
# DASHBOARD ADMINISTRATIVO
# ============================================

# Habilitar dashboard web (true/false)
DASHBOARD_ENABLED=true

# Porta do dashboard
DASHBOARD_PORT=3000

# Credenciais de acesso ao dashboard
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=admin123
